{
  "name": "whatsapp-rust-bridge",
  "version": "0.2.0",
  "description": "A high-performance utilities for WhatsApp, powered by Rust and WebAssembly.",
  "author": "Jo√£o Lucas <jlucaso@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlucaso1/whatsapp-rust-bridge.git"
  },
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "*.wasm"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "scripts": {
    "build": "napi build --release -o dist --platform --esm -t wasm32-wasip1-threads",
    "build:debug": "napi build --platform --esm -t wasm32-wasip1-threads -o dist",
    "prepublishOnly": "napi prepublish"
  },
  "napi": {
    "binaryName": "index",
    "targets": [
      "wasm32-wasip1-threads"
    ]
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.3.1",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.2",
    "mitata": "^1.0.34",
    "typescript": "^5.9.3"
  },
  "private": false
}
